<!DOCTYPE html>
<html>
<head>
  <title>MaroonBlog</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <h1>Maroon Blog</h1>
  <% if flash[:notice] %>
    <p>
      <%= flash[:notice] %>
    </p>
  <% end %>
  
  <% if session[:user_id] %>
    <%= link_to "Sign out", sign_out_path %>
  <% end %>
</header>

<%= yield %>

</body>
</html>
